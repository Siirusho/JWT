{
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "dom",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": "./src",
        "typeRoots": [
            "node_modules/@types",
            "manual_typings"
        ],
        "paths": {
            "@/*": [
                "../*"
            ],
            "@mui/styled-engine": [
                "./node_modules/@mui/styled-engine-sc"
            ],
            "lodash/*": [
                "node_modules/@types/lodash-es/*"
            ]
        },
        "incremental": true
    },
    "include": [
        "types/*.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "next.config.js",
        "next-i18next.config.js",
        "jest.setup.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}